<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> <!-- 맵핑될 DAO 인터페이스의 Full name 을 줍니다. -->

<mapper namespace="sample.test.mapper.busMapper"> 
<!-- id 속성은 DAO 의 메소드와 같아야 한다. 여기의 boardVO 는 mybatis-confg.xml 에 Alias 되어 있습니다. -->
	<select id="selectBusList" resultType="busVO" parameterType="page"> 
		SELECT * 
		FROM (SELECT ROWNUM AS RNUM, A.* 
			FROM BusTable2020 A)
		<where>
			<choose>
				<when test="start == 0">
					RNUM <![CDATA[<=]]> #{length}
				</when>
				<otherwise>
					RNUM <![CDATA[<=]]> #{length} + #{start} and RNUM > #{start}
				</otherwise>
			</choose>
		</where>	
	</select>
	
	<select id="totalCount" resultType="int">
		SELECT COUNT(*)
		FROM BusTable2020
	</select>
</mapper>
